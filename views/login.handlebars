{{! Login/Signup page }}
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Login</h2>
      <form class="form login-form">
        <div class="form-group mb-2">
          <label for="email-login" class="form-text">Email:</label>
          <input class="form-control" type="text" id="email-login" />
        </div>
        <div class="form-group mb-2">
          <label for="password-login" class="form-text">Password:</label>
          <input class="form-control" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-dark" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="col-md-6">
      <h2>Signup</h2>
      <form class="form signup-form">
        <div class="form-group mb-2">
          <label for="name-signup" class="form-text">Name:</label>
          <input class="form-control" type="text" id="name-signup" />
        </div>
        <div class="form-group mb-2">
          <label for="email-signup" class="form-text">Email:</label>
          <input class="form-control" type="text" id="email-signup" />
        </div>
        <div class="form-group mb-2">
          <label for="password-signup" class="form-text">Password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-dark" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Correct script path -->
<script src="/js/login.js"></script>
